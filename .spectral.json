{
  "extends": "spectral:oas",
  "formats": ["oas3"],
  "rules": {
    "alphabetical-tags": {
      "description": "Tags should be sorted alphabetically",
      "given": "$",
      "then": {
        "field": "tags",
        "function": "alphabetical",
        "functionOptions": {
          "keyedBy": "name"
        }
      },
      "severity": "error"
    },
    "operation-summary": {
      "description": "Operations must have a summary",
      "given": "$.paths.[*].[get,post,put,delete,options]",
      "then": {
        "field": "summary",
        "function": "truthy"
      }
    },
    "operation-description": {
      "description": "Operations must have a description",
      "given": "$.paths.[*].[get,post,put,delete,options]",
      "then": {
        "field": "description",
        "function": "truthy"
      }
    }
  }
}

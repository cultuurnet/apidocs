{
  "functionsDir": "./spectral/functions",
  "functions": ["truthyCustomErrorMessage"],
  "extends": [["spectral:oas", "all"]],
  "formats": ["oas3"],
  "rules": {
    "info-license": "off",
    "license-url": "off",
    "tag-description": "off",
    "publiq-alphabetical-tags": {
      "description": "Tags should be sorted alphabetically",
      "given": "$",
      "then": {
        "field": "tags",
        "function": "alphabetical",
        "functionOptions": {
          "keyedBy": "name"
        }
      },
      "severity": "error"
    },
    "publiq-operation-summary": {
      "description": "Operations must have a summary",
      "given": "$.paths.[*].[get,post,put,delete,options]",
      "then": {
        "field": "summary",
        "function": "truthy"
      }
    },
    "publiq-operation-description": {
      "description": "Operations must have a description",
      "given": "$.paths.[*].[get,post,put,delete,options]",
      "then": {
        "field": "description",
        "function": "truthy"
      }
    },
    "publiq-properties-description": {
      "given": "$..[properties][?(@.type)]",
      "then": {
        "field": "description",
        "function": "truthyCustomErrorMessage"
      }
    }
  }
}
